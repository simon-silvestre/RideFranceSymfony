{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-11 mx-auto card-body mb-5 AddEditForm">
             {{ form_start(contact_form) }}
                <div class="form-group">
                  {{ form_row(contact_form.region, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(contact_form.ville, {'attr': {'placeholder': 'Ville', 'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                     {{ form_row(contact_form.contenu, {'attr': {'placeholder': 'Contenu', 'rows': '5', 'class': 'form-control'}}) }}
                </div>
                <div class="form-group d-flex justify-content-between" id="adresseImageForm">
                    <div class="col-6 pl-0">
                        {{ form_row(contact_form.adresse, {'attr': {'placeholder': 'Adresse', 'class': 'form-control'}}) }}
                    </div>

                    <div class="col-6 pr-0">
                        {{ form_row(contact_form.imageFile, {'attr': {'placeholder': 'Adresse', 'class': 'form-control profilInputImage'}}) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Ajouter l'article</button>
            {{ form_end(contact_form) }}
        </div>
    </div>
</div>


{% endblock %}
